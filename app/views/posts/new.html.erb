<div>
	<h1>
		New post
	</h1>
	<div>
		<%= form_for(@post) do |f| %>
		<%= f.label :title %>
		<br>
		<%= f.text_field :title, required: true %>
		<br>
		<%= f.label :description %>
		<br>
		<%= f.text_area :description %>
		<br>
		<%= f.label :price %>
		<br>
		<%= f.text_field :price, required: true  %>
		<br>
		<%= f.submit %>
		<% end %>
	</div>
</div>
